# Brainstormer Configuration

# LLM Provider (ollama or openai)
LLM_PROVIDER=ollama

# LLM Model Names
LLM_MODEL_FAST=deepseek-r1:1.5b
LLM_MODEL_THINK=deepseek-r1:1.5b
LLM_MODEL_MULTIMODAL=deepseek-r1:1.5b
LLM_MODEL_PLAN=deepseek-r1:1.5b

# OpenAI API Configuration (if using openai provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_URL=https://api.openai.com/v1/chat/completions

# Ollama Configuration (if using ollama provider)
OLLAMA_URL=http://localhost:11434/api/chat

# Backend Server Port
PORT=5000

# Context Limits
MAX_BOARD_CHARS=6000
MAX_CHAT_MESSAGES=10
MAX_USER_MESSAGE_CHARS=4000
